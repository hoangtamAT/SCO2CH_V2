<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="com.simcontrol.k.sco.SettingsActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ln1"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt1"
            android:text="SĐT hiện tại"
            android:textSize="15sp"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtcurrentnumber"
            android:background="#ccdcdb"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ln2"
        android:layout_below="@+id/ln1"
        android:weightSum="4"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            android:text="SĐT mới"
            android:textSize="15sp"
            android:layout_weight="3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtnewnumber"
            android:hint="Nhập SĐT mới"
            android:inputType="number"
            android:background="#ccdcdb"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ln4"
        android:layout_below="@+id/ln2"
        android:weightSum="4"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtmk"
            android:text="Mật khẩu"
            android:textSize="15sp"
            android:layout_weight="3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtpassword"
            android:background="#ccdcdb"
            android:hint="Nhập mật khẩu"
            android:inputType="numberPassword"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln4"
        android:id="@+id/ln5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnthoat"
            android:text="Thoát"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/roundbtn"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnsave"
            android:text="Lưu"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginLeft="15dp"
            android:background="@drawable/roundbtn"
            />
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ln5"
        android:id="@+id/btndoimk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundtxt"
        android:text="Đổi mật khẩu"
        android:textColor="#fff"

        />
</RelativeLayout>
