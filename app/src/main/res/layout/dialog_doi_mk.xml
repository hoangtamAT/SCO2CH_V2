<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="#0b3b50"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ln1"
        android:weightSum="6"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt1"
            android:text="Mật khẩu cũ"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_weight="4"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtmkcu"
            android:hint="Nhập mật khẩu cũ"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:background="#ccdcdb"
            android:layout_marginLeft="15dp"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ln2"
        android:weightSum="6"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            android:text="Mật khẩu mới"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_weight="4"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtmkmoi"
            android:hint="Nhập mật khẩu mới"
            android:inputType="numberPassword"
            android:background="#ccdcdb"
            android:maxLength="4"
            android:layout_marginLeft="15dp"
            android:layout_weight="2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ln3"
        android:weightSum="6"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt3"
            android:text="Xác nhận"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_weight="4"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtmkagain"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="numberPassword"
            android:background="#ccdcdb"
            android:maxLength="4"
            android:layout_marginLeft="15dp"
            android:layout_weight="2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btnhuy"
            android:backgroundTint="#d17518"
            android:text="THoát"
            android:textColor="#fff"
            android:background="@drawable/roundtxt"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btnsave"
            android:backgroundTint="#33a68b"
            android:layout_marginLeft="15dp"
            android:text="LƯU"
            android:textColor="#ffffff"
            android:background="@drawable/roundtxt"
            />

    </LinearLayout>



</LinearLayout>
